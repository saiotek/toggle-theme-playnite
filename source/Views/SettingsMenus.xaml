    <Style x:Key="ThemeOptionsPreviewImageGridStyle" TargetType="Grid">
        <Setter Property="Margin" Value="896,0,-560,0" />
        <Setter Property="Width" Value="480" />
        <Setter Property="Height" Value="360" />
        <Setter Property="VerticalAlignment" Value="Top" />
        <Setter Property="HorizontalAlignment" Value="Left" />
    </Style>

    <Style x:Key="ThemeOptionsPreviewImageStyle" TargetType="Image">
        <Setter Property="VerticalAlignment" Value="Top" />
        <Setter Property="HorizontalAlignment" Value="Left" />
    </Style>

    <DataTemplate x:Key="SettingsMenuThemeOptionsButtonTemplate">
        <StackPanel Orientation="Horizontal">
            <TextBlock
                Margin="0,0,24,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontFamily="Segoe Fluent Icons"
                FontSize="32"
                Text="&#xe771;" />
            <TextBlock VerticalAlignment="Center" Text="{DynamicResource LOCThemeOptionsSettingsMenu}" />
        </StackPanel>
    </DataTemplate>

    <Style
        x:Key="SettingsSectionHeaderText"
        BasedOn="{StaticResource TextBlockBaseStyle}"
        TargetType="TextBlock">
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="FontSize" Value="32" />
        <Setter Property="Typography.Capitals" Value="AllSmallCaps" />
        <Setter Property="Opacity" Value="0.75" />
    </Style>

    <Style x:Key="SettingsSectionHeaderDockPanelStyle" TargetType="DockPanel">
        <Setter Property="Margin" Value="0,64,0,0" />
    </Style>

</ResourceDictionary>
