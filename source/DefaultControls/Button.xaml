        <Style
                x:Key="ButtonBigPlayAndInstall"
                BasedOn="{StaticResource {x:Type Button}}"
                TargetType="ButtonEx">
                <Setter Property="Template">
                        <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                        <Grid>

                                                <Border
                                                        x:Name="BorderStandard"
                                                        Background="{DynamicResource ControlBackgroundBrush}"
                                                        BorderBrush="{DynamicResource ControlBackgroundBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="5">
                                                </Border>

                                                <Border
                                                        x:Name="BorderFocus"
                                                        Margin="-2"
                                                        Background="#59BF40"
                                                        BorderBrush="#59BF40"
                                                        BorderThickness="2"
                                                        CornerRadius="5"
                                                        SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                                        Visibility="Hidden">
                                                </Border>
                                                <StackPanel Orientation="Horizontal">
                                                        <TextBlock x:Name="Icon" Text="&#xf5b0;" FontFamily="Segoe Fluent Icons" FontSize="48" 
                                                                VerticalAlignment="Center" HorizontalAlignment="Left"
                                                                Foreground="{TemplateBinding Foreground}" Margin="38,0,0,0"/>
                                                        <TextBlock
                                                                Margin="24,4,38,10"
                                                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                                FontSize="48"
                                                                Foreground="{TemplateBinding Foreground}"
                                                                Style="{DynamicResource TextBlockBaseStyle}">
                                                                <ContentPresenter />
                                                        </TextBlock>
                                                </StackPanel>   
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                                <DataTrigger Binding="{Binding IsInstalled}" Value="False">
                                                        <Setter Property="Background" Value="#1A9FFF" TargetName="BorderFocus" />
                                                        <Setter Property="BorderBrush" Value="#1A9FFF" TargetName="BorderFocus" />
                                                        <Setter Property="Text" Value="&#xe78c;" TargetName="Icon" />
                                                </DataTrigger>
                                                <Trigger Property="IsEnabled" Value="False">
                                                        <Setter Property="Opacity" Value="0.5" />
                                                </Trigger>
                                                <Trigger Property="IsFocused" Value="True">
                                                        <Setter TargetName="BorderFocus" Property="Visibility" Value="Visible" />
                                                        <Setter TargetName="BorderStandard" Property="Visibility" Value="Hidden" />
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
