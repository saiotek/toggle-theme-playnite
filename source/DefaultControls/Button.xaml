                                                        <Setter TargetName="BorderStandard" Property="Visibility" Value="Hidden" />
                                                </Trigger>
                                                <Trigger Property="IsEnabled" Value="False">
                                                        <Setter Property="Foreground" Value="{DynamicResource TextBrushDark}" />
                                                </Trigger>
                                        </ControlTemplate.Triggers>
                                </ControlTemplate>
                        </Setter.Value>
                </Setter>
