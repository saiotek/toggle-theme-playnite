<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <Style x:Key="ChangeViewButton" TargetType="CheckBox">
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="FocusVisualStyle" Value="{x:Null}" />
    <Setter Property="SnapsToDevicePixels" Value="True" />
    <Setter Property="VerticalAlignment" Value="Center" />
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="CheckBox">
          <Border
            x:Name="MainBorder"
            Margin="-7,-8,-7,-8"
            Padding="6"
            Background="Transparent"
            BorderBrush="Transparent"
            BorderThickness="4"
            CornerRadius="40">
            <TextBlock
              x:Name="Icon"
              Margin="8"
              FontSize="52"
              Style="{StaticResource FluentIconStyle}"
              Text="&#xf0e2;" />
          </Border>
          <ControlTemplate.Triggers>
            <Trigger Property="IsFocused" Value="True">
              <Setter TargetName="MainBorder" Property="BorderBrush" Value="{DynamicResource PrimaryBrush}" />
              <Setter TargetName="MainBorder" Property="Background" Value="#1AFFFFFF" />
            </Trigger>
            <Trigger Property="IsChecked" Value="False">
              <Setter TargetName="Icon" Property="Text" Value="&#xf57b;" />
            </Trigger>
          </ControlTemplate.Triggers>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

  <Style x:Key="ButtonTopMenu" TargetType="Button">
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="FocusVisualStyle" Value="{x:Null}" />
    <Setter Property="SnapsToDevicePixels" Value="True" />
    <Setter Property="VerticalAlignment" Value="Center" />
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="Button">
          <Border
            x:Name="MainBorder"
            Margin="-7,-8,-7,-8"
            Padding="6"
            Background="Transparent"
            BorderBrush="Transparent"
            BorderThickness="4"
            CornerRadius="40">
            <ContentPresenter />
          </Border>
          <ControlTemplate.Triggers>
            <Trigger Property="IsFocused" Value="True">
              <Setter TargetName="MainBorder" Property="BorderBrush" Value="{DynamicResource PrimaryBrush}" />
              <Setter TargetName="MainBorder" Property="Background" Value="#1AFFFFFF" />
            </Trigger>
          </ControlTemplate.Triggers>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

